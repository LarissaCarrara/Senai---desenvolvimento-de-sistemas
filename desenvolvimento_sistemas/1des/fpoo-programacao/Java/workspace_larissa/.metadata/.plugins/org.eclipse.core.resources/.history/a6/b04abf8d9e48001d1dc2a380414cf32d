package notas01;

public class Boletim {

	String aluno;
	float portugues;
	float matematica;
	float ciencias;
	float media;

	
	Boletim(){}
	
	Boletim (String alu, float port, float mat, float cie){
	aluno = alu;
	portugues = port;
	matematica = mat;
	ciencias= cie;
	
		
	}
	
	//m√©todos
	float media() {
		return (portugues + matematica + ciencias)/3;
	}

	
	
	public String toString() {
		return String.format( "\n %s \t %.2f \t %.2f \t %.2f \t %.2f", aluno, portugues, matematica, ciencias, media());
	}
	
}
