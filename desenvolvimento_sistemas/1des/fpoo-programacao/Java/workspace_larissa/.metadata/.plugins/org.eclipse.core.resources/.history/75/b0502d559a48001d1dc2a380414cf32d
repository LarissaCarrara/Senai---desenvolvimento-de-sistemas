package notas01;

public class Boletim {

	String aluno;
	float portugues;
	float matematica;
	float ciencias;
	float media;

	
	//métodos
	float media() {
		return (portugues + matematica + ciencias)/3;
	}

	public String toString() {
		return String.format( "Aluno(a): %s \t Port. \t Math. \t Cienc. \t Médias: %.2f \n", aluno, media());
	}
}
