package notas01;

public class Boletim {

	String aluno;
	float portugues;
	float matematica;
	float ciencias;
	float media;

	
	//m√©todos
	float media() {
		return (portugues + matematica + ciencias)/3;
	}

	
	
	public String toString() {
		return String.format( "\n %s \t %.2f \t %.2f \t %.2f \t %.2f", aluno, portugues, matematica, ciencias, media());
	}
}
