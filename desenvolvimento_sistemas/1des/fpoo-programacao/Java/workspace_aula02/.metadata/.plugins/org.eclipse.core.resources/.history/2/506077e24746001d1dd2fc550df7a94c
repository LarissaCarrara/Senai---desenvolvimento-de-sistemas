package vendas02;

public class Main {

	public static void main(String[] args) {
		Venda vendas[] = new Venda[10];
		float total; 
		
		vendas[0] = new Venda();
		vendas[0].produto ="Camiseta";
		vendas[0].preco =19.8f;
		vendas[0].quantidade = 1;
		
		vendas[1] = new Venda();
		vendas[1].produto ="Canga1";
		vendas[1].preco =19.9f;
		vendas[1].quantidade = 1;
		
		vendas[2] = new Venda();
		vendas[2].produto ="Canga2";
		vendas[2].preco =19.9f;
		vendas[2].quantidade = 1;
		
		vendas[3] = new Venda();
		vendas[3].produto ="Canga3";
		vendas[3].preco =19.9f;
		vendas[3].quantidade = 1;
		
		vendas[4] = new Venda();
		vendas[4].produto ="Canga4";
		vendas[4].preco =19.9f;
		vendas[4].quantidade = 1;
		
		vendas[5] = new Venda();
		vendas[5].produto ="Canga5";
		vendas[5].preco =19.9f;
		vendas[5].quantidade = 1;
		
		vendas[6] = new Venda();
		vendas[6].produto ="Canga6";
		vendas[6].preco =19.9f;
		vendas[6].quantidade = 1;
		
		vendas[7] = new Venda();
		vendas[7].produto ="Canga7";
		vendas[7].preco =19.9f;
		vendas[7].quantidade = 1;
		
		vendas[8] = new Venda();
		vendas[8].produto ="Canga8";
		vendas[8].preco =19.9f;
		vendas[8].quantidade = 1;
		
		vendas[9] = new Venda();
		vendas[9].produto ="Canga9";
		vendas[9].preco =19.9f;
		vendas[9].quantidade = 1;
		
		
		for(int i=0; i<10;i++) {
			System.out.printf("%s\t%.2f\t%d%.2f\n", vendas[i].produto, vendas[i].preco, vendas[i].quantidade, vendas[i].subtotal());
			total = vendas[i].subtotal() + total;
		}
		
		System.out.println("Total: %.2f", total);
	}

}
